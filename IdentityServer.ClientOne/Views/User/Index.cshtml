@using Microsoft.AspNetCore.Authentication
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<a class="btn btn-success" asp-action="Logout">Logout</a>
<h2>Special area</h2>
<h3>Cliams:</h3>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>
            Claim Type
        </th>
        <th>
            Claim Value
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in User.Claims)
    {
        <tr>
            <td>@item.Type</td>
            <td>@item.Value</td>
        </tr>
    }
    </tbody>
</table>
<h3>Authentication informations:</h3>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>
            Auth property key
        </th>
        <th>
            Auth property value
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in (await Context.AuthenticateAsync()).Properties.Items)
    {
        <tr>
            <td>@item.Key</td>
            <td>@item.Value</td>
        </tr>
    }
    </tbody>
</table>